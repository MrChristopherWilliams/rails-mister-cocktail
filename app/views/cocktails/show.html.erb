<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
  <div>
    <% @cocktail.doses.each do |i| %>
    <div class="col-4">
        <%= i.ingredient.name %>
        <%= i.description %>
      <%end%>
    <br>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) {:style=>'color:#FFFFFF;', :class => "css_class"}%>
    <br>
    <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete %>
    <br>
    <%= link_to "Go back", cocktails_path() %>
    </div>
  </div>
</div>
